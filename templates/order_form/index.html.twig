{% extends 'base.html.twig' %}

{% block title %}Objednávkový formulář{% endblock %}

{% block body %}
    <h1>Objednávkový formulář</h1>
    <div class="row">
        <div class="col-8">
            {% if remainingOnStock is defined %}
                <div class="alert alert-danger">
                    Na skladě zbývá pouze {{ remainingOnStock }} kusů.
                </div>
            {% endif %}
            {{ form(form, {'attr': {'novalidate': 'novalidate'}}) }}
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    Shrnutí objednávky
                </div>
                <div class="card-body">
                    <h5 class="card-title">Objednaný produkt:</h5>
                    <p class="card-text">
                        {% for product in order.products %}
                            {{ product.name }}<br>
                        {% endfor %}
                    </p>
                    <h5 class="card-title">Celková cena:</h5>
                    <p class="card-text">{{ totalPrice|number_format(2, ',', ' ') }} Kč</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
